# Editor configuration, see http://editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts,scss}]
quote_type = single

[*.min.js]
insert_final_newline = false

[*.md]
max_line_length = 0
trim_trailing_whitespace = false
